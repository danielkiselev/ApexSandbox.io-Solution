public String nameFromEmail(String email) {
    //code herepublic String nameFromEmail(String email) {
   Integer firstname;
   String lastname;
   String fName;
   Integer size = email.length();
    for(Integer i = 0; i<size ; i++;){
       String curr = email.substring(i, i+1);
       if(curr=='.'){
           firstname = i;
           fName = email.substring(0,i);
           continue;
       }else if(curr =='@'){
           lastname = email.substring(firstname+1,i);
           break;
       }
    }
    String name = fName.tolowerCase().capitalize()+' '+lastname.tolowerCase().capitalize();
    return name;

}